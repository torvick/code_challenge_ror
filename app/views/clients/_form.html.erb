<%= form_with(model: client) do |form| %>
  <div class="row p-5">
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-10">
    <h5 class="">New Client</h5>
  </div>

  <div class="col-md-12">
    <%= form.label :name, class:"form-label" %>
    <%= form.text_field :name, class:"form-control", required: true %>
  </div>

  <div class="col-md-6 d-flex justify-content-md-start mt-3">
    <%= link_to "Back to clients", clients_path(), class: "btn btn-outline-secondary" %>
  </div>

  <div class="col-md-6 d-flex justify-content-md-end mt-3">
    <%= form.submit "Send", class:"btn btn-primary" %>
  </div>
</div>
<% end %>
