<%= form_with(model: product) do |form| %>
<div class="row p-5">
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-10">
    <h5 class="">New Product</h5>
  </div>

  <div class="col-md-12">
    <%= form.label :description, class:"form-label" %>
    <%= form.text_field :description, class:"form-control", required: true  %>
  </div>

  <div class="col-md-12">
    <%= form.label :price_per_piece, class:"form-label" %>
    <%= form.text_field :price_per_piece, class:"form-control", required: true  %>
  </div>

  <div class="col-md-6 d-flex justify-content-md-start mt-3">
    <%= link_to "Back to products", products_path(), class: "btn btn-outline-secondary" %>
  </div>

  <div class="col-md-6 d-flex justify-content-md-end mt-3">
    <%= form.submit "Send", class:"btn btn-primary" %>
  </div>
</div>
<% end %>
